<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#000"
    android:orientation="horizontal"
    android:padding="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvChannelNumberShimmer"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:background="#767676"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvChannelNameShimmer"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:background="#767676"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChannelNumberShimmer" />

        <ImageView
            android:id="@+id/imgChannelIcon"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#767676"
            app:layout_constraintBottom_toTopOf="@+id/tvChannelNameShimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvChannelNumberShimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="0.8"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/tvProgramNameShimmer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="#767676"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


</LinearLayout>
